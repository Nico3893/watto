<div class="container" id="dash">
  <div class="row">
    <div class="col-4 ">
      <div class="row justify-content-center">
        <h2>My Items</h2>
      </div>
      <div class="item-container">
        <% if @items.empty? %>
          Please upload items
        <% else %>
          <% @items.each do |item| %>
            <div class="card-product">
              <%= cl_image_tag item.photo %>
              <div class="card-product-infos">
                <h2><%= item.name %></h2>
                <div class="d-flex justify-content-between">
                  <p><%= item.category %></p>
                  <p><%= item.price %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-7 offset-1">
      <div class="row justify-content-center">
        <h2>My Bookings</h2>
      </div>
      <div class="row bookings-container justify-content-around">
        <% if @bookings_as_owner.empty? && @own_bookings.empty? %>
          Please make a booking...
        <% else %>
          <div class="my-offers">
            <h2>My Offers</h2>
            <% if @bookings_as_owner.empty? %>
              <p>You don't have any bookings yet...</p>
            <% else %>
              <% @bookings_as_owner.each do |book| %>
                <div class="card-product">
                  <%= cl_image_tag book.item.photo %>
                  <div class="card-product-infos">
                    <h2><%= book.item.name %></h2>
                    <div class="d-flex justify-content-between">
                      <p><%= book.start_date %></p>
                      <p><%= book.end_date %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="my-rents">
            <h2>I booked</h2>
            <% if @own_bookings.empty? %>
              <p>Book something please</p>
            <% else %>
              <% @own_bookings.each do |book| %>
                <div class="card-product">
                  <%= cl_image_tag book.item.photo %>
                  <div class="card-product-infos">
                    <h2><%= book.item.name %></h2>
                    <div class="d-flex justify-content-between">
                      <p><%= book.start_date %></p>
                      <p><%= book.end_date %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
