<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, id: "navbar-brand" do %>
    <%= image_tag "https://i.pinimg.com/originals/74/7a/6d/747a6d97e9aeeafbe1b820d3a4ceebe7.jpg" %>
  <% end %>
  <div id="navbar-flex">
    <div>
     <!--  <form action="/items">
        <input type="search" name="search" class="search navbar-search nav-item-search" placeholder="Search your item">
      </form> -->
      <%= form_tag items_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "search navbar-search nav-item-search",
          placeholder: "Search items"
        %>
      <% end %>
    </div>
    <div>
      <ul class="navbar-nav">
        <%= link_to new_item_path, class: "nav-link" do %>
          <li class="nav-item">
            Offer
          </li>
          <% end%>
        <%= link_to items_path, class: "nav-link" do %>
          <li class="nav-item">
            Items
          </li>
        <% end%>
        <%= link_to dashboard_path, class: "nav-link" do %>
          <li class="nav-item">
            Dashboard
          </li>
        <% end%>
        <% if user_signed_in? %>
          <!-- <li class="ml-5 mt-2">
            <%= cl_image_tag current_user.photo, class: "avatar" %>
          </li> -->
          <li class="dropdown ml-3 mt-2">
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <%= link_to dashboard_path, class: "nav-link" do %>
            <li class="nav-item">
              Login
            </li>
          <% end%>
        <% end %>
      </ul>
    </div>
  </div>
</div>

