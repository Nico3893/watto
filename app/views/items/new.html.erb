<% content_for(:title) do %>
  Rent out yourself!
<% end %>

<div class="container">
  <h1>Offer a new item</h1>
  <div class="mt-3 mb-3">
    <%= link_to "Back", :back, class: "button-dark"%>
  </div>
  <%= simple_form_for(@item) do |f| %>
    <%= f.input :name %>
    <%= f.input :details %>
    <%= f.input :price %>
    <%= f.input :category, collection: ['vehicle', 'starship'] %>
      <%= f.submit "Create", class: "button-dark" %>
  <% end %>
</div>
