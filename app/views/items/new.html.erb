<% content_for(:title) do %>
  Rent out yourself!
<% end %>

<div class="container create-item">
  <div class="form-box">
    <h1>Offer a new item</h1>
    <div class="my-3">
      <%= link_to "Back", :back, class: "button-dark"%>
    </div>
    <%= simple_form_for(@item) do |f| %>
      <%= f.input :name %>
      <%= f.input :details %>
      <%= f.input :price %>
      <%= f.input :category, collection: ['vehicle', 'starship'] %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Create", class: "button-dark" %>
    <% end %>
  </div>
</div>
