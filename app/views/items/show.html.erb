<% content_for(:title) do %>
  Book <%= @item.name %>
<% end %>


<div class="container">

      <div class="banner-show" style='background-image:url(<%=@item.photo%>)'>
      </div>
  <div class="row justify-content-between">
    <div class="detail-container col-4">
      <h2>
        <%= @item.name %>
      </h2>
        <% details =  @item.details.split(",") %>
        <% details.each do |detail| %>
          <p>
            <%= detail.upcase %>
          </p>
        <% end %>
      <%if @item.location.nil? %>
      <%else%>
      <h3>Location</h3>
      <p>
        <%= @item.location %>
      </p>
      <%end%>
      <h3>Category</h3>
      <p>
        <%= @item.category.capitalize %>
      </p>
    </div>
    <div class="col-3">
      <div class="row">
        <div class="col-12 avatar-large align-self-center">
        <%= image_tag "http://sharpball.co/wp-content/uploads/2019/01/darth-vader-printable-mask-image-0-darth-vader-mask-coloring-sheet.jpg", alt: "alttext", class: "avatar-large"%>
        </div>
      </div>
      <div class="row align-self-end">
        <div class="col-12 align-items-flex-end">
          <p><%= "#{@item.price} C/DAY" %></p>
        </div>
      </div>
    </div>
    <div class="form-booking col-4 pt-3 mt-2">
      <%= simple_form_for :booking, method: :post do |t| %>
        <%= t.input :start_date, as: :string, input_html: {class: "datepicker"} %>
        <%= t.input :end_date, as: :string, input_html: {class: "datepicker"} %>
        <%= t.submit "Book", class: "button-dark"%>
      <% end %>
    </div>
  </div>
</div>
